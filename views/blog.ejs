<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>

<body>
<%- include('./partials/nav') %>

<div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="/<%= blog.coverImageURL %>" width="300px">
    <div class="mt-3 p-2 border rounded" style="white-space: pre-wrap;">
  <%= blog.body %>
</div>
</div>

<div class="container mt-4">
    <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
    <%= blog.createdBy.fullName %>
</div>

<div class="container mt-3">
    <h4>Comments (<%= comments.length %>)</h4>

    <% if (locals.user) { %>
     <form action="/blog/comment/<%= blog._id %>" method="POST">
  <div class="mb-3">
    <input type="text" name="content" class="form-control" placeholder="Enter your Comment">
    <button class="btn btn-sm btn-primary" type="submit">Add</button>
  </div>
  </form>

    <% } else { %>
        <div class="alert alert-info d-flex justify-content-between align-items-center mt-3">
  <div>
    <i class="bi bi-info-circle-fill me-2"></i>
    <strong>Please</strong> <a href="/user/signin" class="alert-link">sign in</a> to comment.
  </div>
  <a href="/user/signin" class="btn btn-sm btn-primary">Sign In</a>
</div>

         <% } %>
    <div class="mt-3">
    <% comments.forEach(comment => { %>
        <div>
          <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
          <%= comment.createdBy.fullName %>
          <pre><%= comment.content %></pre>
        </div>
        <% }) %>
  </div>
</div>
<%- include('./partials/scripts') %>
</body>
</html>